<h1>New Problem</h1>
<%= form_for @problem do |f| %>
<p>	
	<%= f.label :name %><br/>
	<%= f.text_field :name %>
</p>
<p>
	<%= f.label :category_id %><br/>
	<%= f.number_field :category_id %>
</p>
<p>
	<%= f.label :description %><br/>
	<%= f.text_area :description %>
</p>
<p>
	<%= f.submit %>
</p>
<% end %>